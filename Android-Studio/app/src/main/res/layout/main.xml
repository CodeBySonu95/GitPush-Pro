<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#0B0E0B"
	android:paddingHorizontal="24dp"
	android:paddingVertical="16dp">
	<LinearLayout
		android:id="@+id/header_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/img_back"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/icon_arrow"
			android:scaleType="fitXY"
			app:tint="#FFFFFF"
			android:contentDescription="Back" />
		<TextView
			android:id="@+id/textview22"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:text="GitHub Setup"
			android:textSize="18sp"
			android:textColor="#FFFFFF"
			android:layout_weight="1"
			android:fontFamily="sans-serif-medium"
			android:layout_marginEnd="24dp" />
	</LinearLayout>
	<ScrollView
		android:id="@+id/vscroll4"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="32dp"
		android:scrollbars="none"
		android:layout_above="@id/btn_connect"
		android:layout_below="@id/header_layout">
		<LinearLayout
			android:id="@+id/linear15"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview23"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:text="GitHub Committer"
				android:textSize="32sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:letterSpacing="-0.02" />
			<TextView
				android:id="@+id/textview24"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Link your repository to start committing files directly from your mobile device."
				android:textSize="13sp"
				android:textColor="#9E9E9E"
				android:paddingHorizontal="20dp"
				android:lineSpacingExtra="2dp" />
			<TextView
				android:id="@+id/textview25"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="36dp"
				android:layout_marginBottom="8dp"
				android:text="GitHub Token"
				android:textSize="13sp"
				android:textColor="#FFFFFF"
				android:fontFamily="sans-serif-medium" />
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/layout_token"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
				app:boxBackgroundColor="#151815"
				app:boxStrokeColor="#2C2C2C"
				app:boxCornerRadiusBottomEnd="20dp"
				app:boxCornerRadiusBottomStart="20dp"
				app:boxCornerRadiusTopEnd="20dp"
				app:boxCornerRadiusTopStart="20dp"
				app:endIconMode="password_toggle"
				app:endIconTint="#9E9E9E"
				app:hintEnabled="false">
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/edit_token"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:hint="ghp_xxxxxxxxxxxx"
					android:textColorHint="#444444"
					android:inputType="textPassword"
					android:paddingVertical="16dp" />
			</com.google.android.material.textfield.TextInputLayout>
			<TextView
				android:id="@+id/token_guide_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:text="Use a Personal Access Token with 'repo' scope."
				android:textSize="11sp"
				android:textColor="#666666"
				android:layout_marginStart="4dp" />
			<TextView
				android:id="@+id/textview27"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:layout_marginBottom="8dp"
				android:text="Repository URL"
				android:textSize="13sp"
				android:textColor="#FFFFFF"
				android:fontFamily="sans-serif-medium" />
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/layout_repo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
				app:boxBackgroundColor="#151815"
				app:boxStrokeColor="#2C2C2C"
				app:boxCornerRadiusBottomEnd="20dp"
				app:boxCornerRadiusBottomStart="20dp"
				app:boxCornerRadiusTopEnd="20dp"
				app:boxCornerRadiusTopStart="20dp"
				app:hintEnabled="false">
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/edit_repo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:hint="Enter Repo URL"
					android:textColorHint="#444444"
					android:paddingVertical="16dp" />
			</com.google.android.material.textfield.TextInputLayout>
			<TextView
				android:id="@+id/path_guide_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:text="Paste repository or folder link from GitHub"
				android:textSize="11sp"
				android:textColor="#666666"
				android:layout_marginStart="4dp" />
			<LinearLayout
				android:id="@+id/linear16"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_marginTop="48dp"
				android:layout_marginBottom="32dp"
				android:background="@drawable/circle_outline_green"
				android:gravity="center_horizontal|center_vertical"
				android:layout_gravity="center_horizontal|center_vertical">
				<ImageView
					android:id="@+id/imageview12"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/icon_cloud_sync"
					android:scaleType="fitXY"
					app:tint="#52D02E" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<com.google.android.material.button.MaterialButton
		android:id="@+id/btn_connect"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_marginBottom="8dp"
		android:text="Connect Repository"
		android:textSize="16sp"
		android:textStyle="bold"
		android:textColor="#000000"
		style="@style/Widget.Material3.Button"
		android:textAllCaps="false"
		app:backgroundTint="#52D02E"
		app:cornerRadius="30dp"
		android:layout_alignParentBottom="true" />
</RelativeLayout>
